@model UpdateCastingAgentProfileViewModel

<div class="container mt-5">
    <h1 class="text-center">Update Profile</h1>

    <form asp-action="Update" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CastingAgency" class="form-label">Casting Agency</label>
            <input asp-for="CastingAgency" class="form-control" />
            <span asp-validation-for="CastingAgency" class="text-danger"></span>
        </div>
        <input asp-for="Id" type="hidden" />

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
