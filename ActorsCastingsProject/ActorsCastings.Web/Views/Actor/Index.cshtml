@model IEnumerable<ActorIndexViewModel>

@{
    ViewData["Title"] = "Actors";
}

<h1>Actors</h1>

<div class="row">
    @foreach (var actor in Model)
    {
        <div class="col-md-4 mb-4">
            <a asp-action="Details" asp-route-id="@actor.Id" class="text-decoration-none text-dark">
                <div class="card">
                    <img src="@actor.ProfilePictureUrl" class="card-img-top" alt="@actor.FirstName @actor.LastName's Profile Picture" style="max-height: 300px; object-fit: contain" />
                    <div class="card-body">
                        <h5 class="card-title">@actor.FirstName @actor.LastName</h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
