@model IEnumerable<ActorIndexViewModel>

@{
    ViewData["Title"] = "Actors";
}

<h1>Actors</h1>

<div class="row">
    @foreach (var actor in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@actor.ProfilePictureUrl" class="card-img-top thumbnail-image" alt="@actor.FirstName @actor.LastName's Profile Picture" />
                <div class="card-body">
                    <h5 class="card-title">@actor.FirstName @actor.LastName</h5>
                    <a asp-action="Details" asp-route-id="@actor.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
