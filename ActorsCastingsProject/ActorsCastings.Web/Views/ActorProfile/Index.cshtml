@model ActorsCastings.Web.ViewModels.ActorProfile.ActorProfileViewModel

<div class="container mt-5">
    <h1 class="text-center">My Profile</h1>

    <div class="row mt-4">
        <div class="col-md-4 text-center">
            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="img-thumbnail rounded-circle" style="width: 150px; height: 150px;">
        </div>
        <div class="col-md-8">
            <h2>@Model.FirstName @Model.LastName</h2>
            <p><strong>Age:</strong> @(Model.Age.HasValue ? Model.Age.Value.ToString() : "N/A")</p>
            <p><strong>Biography:</strong> @(!string.IsNullOrWhiteSpace(Model.Biography) ? Model.Biography : "No biography available.")</p>
        </div>
    </div>

    <hr />

    <div class="mt-4">
        <h3>My Movies</h3>
        <div class="mb-3">
            <a asp-action="AddMovieFromProfile" class="btn btn-primary btn-lg">
                <i class="fas fa-plus"></i> Add Movie
            </a>
        </div>
        @if (Model.Movies.Any())
        {
            <div class="d-flex overflow-auto">
                @foreach (var movie in Model.Movies)
                {
                    <div class="card m-2" style="min-width: 200px;">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text">
                                <strong>Release Year:</strong> @movie.ReleaseYear <br />
                                <strong>Director:</strong> @movie.Director
                            </p>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No movies listed yet.</p>
        }
    </div>

    <hr />

    <div class="mt-4">
        <h3>My Plays</h3>
        <div class="mb-3">
            <a asp-action="AddPlayFromProfile" class="btn btn-primary btn-lg">
                <i class="fas fa-plus"></i> Add Play
            </a>
        </div>
        @if (Model.Plays.Any())
        {
            <div class="d-flex overflow-auto">
                @foreach (var play in Model.Plays)
                {
                    <div class="card m-2" style="min-width: 200px;">
                        <div class="card-body">
                            <h5 class="card-title">@play.Title</h5>
                            <p class="card-text">
                                <strong>Release Year:</strong> @play.ReleaseYear <br />
                                <strong>Director:</strong> @play.Director
                            </p>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No plays listed yet.</p>
        }
    </div>
</div>

<script src="https://kit.fontawesome.com/2adefc9ae5.js" crossorigin="anonymous"></script>
