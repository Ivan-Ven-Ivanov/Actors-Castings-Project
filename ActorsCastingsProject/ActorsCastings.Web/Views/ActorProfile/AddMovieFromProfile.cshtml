@model IEnumerable<MovieViewModel>

<div class="container mt-5">
    <h1 class="text-center">Add Movie to Your Profile</h1>

    <div class="text-end mb-3">
        <a asp-action="AddNewMovie" class="btn btn-success btn-lg">
            <i class="fas fa-plus-circle"></i> Add New Movie
        </a>
    </div>

    <form asp-action="AddSelectedMovies" method="post">
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <img src="@movie.ImageUrl" class="card-img-top" alt="@movie.Title Picture" />
                            <p class="card-text">
                                <strong>Release Year:</strong> @movie.ReleaseYear <br />
                                <strong>Director:</strong> @movie.Director
                            </p>
                            <div class="form-group">
                                <label for="role-@movie.Id">Your Role:</label>
                                <input type="text" class="form-control" id="role-@movie.Id" name="Roles[@movie.Id]" placeholder="Enter your role in this movie">
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <input type="checkbox" name="SelectedMovies" value="@movie.Id" id="movie-@movie.Id">
                            <label for="movie-@movie.Id">Select Movie</label>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-save"></i> Add Selected Movies
            </button>
        </div>
    </form>
</div>

<script src="https://kit.fontawesome.com/2adefc9ae5.js" crossorigin="anonymous"></script>
