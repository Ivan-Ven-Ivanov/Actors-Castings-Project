<div class="container mt-5">
    <h1 class="text-center">Admin Dashboard</h1>
    <hr />

    <div class="row g-4 mt-4 justify-content-center">
        <!-- Larger and Centered Pending Approvals Card -->
        <div class="col-md-6">
            <div class="card text-center h-100 shadow-lg bg-light">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title display-5">Pending Approvals</h5>
                    <p class="card-text lead">Approve pending information submitted by users.</p>
                    <a asp-area="Admin" asp-controller="Approval" asp-action="Index"
                       class="btn btn-primary btn-lg py-3 px-4 mt-auto">
                        <i class="fas fa-check-circle"></i> Approve Information
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Four Cards in One Row -->
    <div class="row g-4 mt-4">
        <div class="col-md-3">
            <div class="card text-center h-100 shadow">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage and view all registered users.</p>
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-secondary mt-auto">
                        <i class="fas fa-users"></i> View Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center h-100 shadow">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Movies</h5>
                    <p class="card-text">View and manage movie listings.</p>
                    <a asp-area="Admin" asp-controller="Movie" asp-action="Index" class="btn btn-success mt-auto">
                        <i class="fas fa-film"></i> View Movies
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center h-100 shadow">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Castings</h5>
                    <p class="card-text">Manage and view casting opportunities.</p>
                    <a asp-area="Admin" asp-controller="Casting" asp-action="Index" class="btn btn-warning mt-auto">
                        <i class="fas fa-theater-masks"></i> View Castings
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center h-100 shadow">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Plays</h5>
                    <p class="card-text">Manage and view plays in the system.</p>
                    <a asp-area="Admin" asp-controller="Play" asp-action="Index" class="btn btn-info mt-auto">
                        <i class="fas fa-scroll"></i> View Plays
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/2adefc9ae5.js" crossorigin="anonymous"></script>
